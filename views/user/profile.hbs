<div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <h1 style="color:white">User Profile</h1>
            <hr style="background:white">
            <h2 style="color:wheat" style="padding:30px">My Orders</h2>
            {{# each orders}}
            <div class="card" style="margin-bottom:30px">
                <div class="card-body">
                    <ul class="list-group">
                        {{# each this.items}}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{this.item.title}} | {{this.qty}} Units
                            <span class="badge badge-primary badge-pill">{{this.price}}</span>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="card-footer text-muted" style="float:right">
                    <strong>Total Price: $ {{this.cart.totalPrice}}</strong>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>